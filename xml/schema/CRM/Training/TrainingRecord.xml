<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Training</base>
  <class>TrainingRecord</class>
  <name>training_record</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Record ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>type_id</name>
    <type>int unsigned</type>
    <import>true</import>
    <export>false</export>
    <title>Training Type</title>
    <required>true</required>
    <comment>FK to training_type.id</comment>
    <html>
      <type>Select</type>
      <label>Training Type</label>
    </html>
  </field>
  <index>
    <name>index_type_id</name>
    <fieldName>type_id</fieldName>
  </index>
  <foreignKey>
    <name>type_id</name>
    <table>training_type</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <export>true</export>
    <required>true</required>
    <html>
      <type>EntityRef</type>
      <label>Contact</label>
    </html>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>label</name>
    <type>varchar</type>
    <import>true</import>
    <title>Label</title>
    <length>255</length>
    <localizable>true</localizable>
    <comment>Identifier for the training item</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>description</name>
    <type>text</type>
    <title>Description</title>
    <html>
      <type>RichTextEditor</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
    <localizable>true</localizable>
    <comment>Full description of record. Text and html allowed.</comment>
  </field>

  <field>
    <name>credits_awarded</name>
    <type>boolean</type>
    <required>true</required>
    <title>Are Credits Awarded</title>
    <default>0</default>
    <comment>Whether or not credits were awarded for this record. If so, you can specify the number of credits below.</comment>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>credits</name>
    <type>int unsigned</type>
    <title>Credits</title>
    <default>NULL</default>
    <comment>The number of credits awarded for the record.</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>entry_date</name>
    <title>Entry Date</title>
    <type>date</type>
    <import>true</import>
    <export>true</export>
    <default>NULL</default>
    <dataPattern>/\d{4}-?\d{2}-?\d{2}/</dataPattern>
    <comment>Date the record was made.</comment>
    <html>
      <type>Select Date</type>
      <formatType>activityDate</formatType>
    </html>
  </field>

</table>
